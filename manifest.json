{
    "name": "Randomised Greetings and Signoffs",
    "version": "1.0.0",
    "description": "Randomise how you say hello and goodbye",
    "manifest_version": 3,
    "content_scripts": [
        {
          "matches": ["<all_urls>", "http://*/*","https://*/*"],
          "js": ["./scripts/app.js"]
        }
      ],
    "author": "David Tenni",
    "action":{
        "default_popup": "index.html",
        "default_title": "Randomised Greetings and Signoffs"
    }
}